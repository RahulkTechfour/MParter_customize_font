<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.luminous.mpartner.survey.SurveyQuestionFragment">

    <LinearLayout
        android:id="@+id/ll_survey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/five_dp"
        android:paddingTop="@dimen/ten_dp"
        android:paddingRight="@dimen/five_dp">

        <com.luminous.mpartner.custom_text_view.TextViewRegular
            android:id="@+id/tvQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_create_new_dealer_header"
            android:padding="@dimen/padding_20"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_create_dealer_footer"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/rgOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="@dimen/ten_dp">


                <RadioButton
                    android:id="@+id/radioA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/radioE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        </LinearLayout>

        <EditText
            android:id="@+id/etSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Answer"
            android:maxLength="50"
            android:padding="10dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="@dimen/ten_dp"
            android:background="@color/colorPrimary"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:visibility="visible" />


    </LinearLayout>


</layout>
