<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.luminous.mpartner.dealer.CreateDealerFragment"
        android:background="#dfeff4">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp">

                <com.luminous.mpartner.custom_text_view.TextViewRegular
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Dealer"
                    android:textSize="18dp"
                    android:textColor="#333333"
                    android:layout_below="@+id/imageView" />

                <EditText
                    android:id="@+id/txtDealerFirmName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txt"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Dealer Firm Name"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtDealerName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtDealerFirmName"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Dealer Name"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtOwnerName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtDealerName"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Owner Name"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtAddressFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtOwnerName"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="top|left"
                    android:hint="Address1"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtAddressSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtAddressFirst"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:gravity="top|left"
                    android:hint="Address2"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:scrollHorizontally="false"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rel_sp1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_below="@+id/txtAddressSecond">

                    <Spinner
                        android:id="@+id/spState"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/grayDark"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_sp2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_below="@+id/rel_sp1">

                    <Spinner
                        android:id="@+id/spCity"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/grayDark"
                        />

                </RelativeLayout>

                <EditText
                    android:id="@+id/txtPostalCode"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rel_sp2"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Postal Code"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:id="@+id/rel_sp3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/edit_text_style"
                    android:layout_below="@+id/txtPostalCode">

                    <Spinner
                        android:id="@+id/spCountry"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textColor="@color/grayDark"
                        />
                </RelativeLayout>

                <EditText
                    android:id="@+id/txtMobNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/rel_sp3"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Mobile No"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txtTelePhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtMobNo"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="Telephone No"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />


                <EditText
                    android:id="@+id/txtEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/txtTelePhoneNo"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/edit_text_style"
                    android:hint="EmailId"
                    android:inputType="textEmailAddress"
                    android:maxLength="10"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textColorHint="@color/grayDark"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btnCreateDealer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Create New Dealer"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="30dp"
                    android:textAllCaps="false"
                    android:background="@drawable/create_dealer_btn_style"
                    android:gravity="center"
                    android:visibility="visible"
                    android:onClick="createNewDealerClick"
                    android:textColor="#FFFFFF"
                    android:layout_below="@+id/txtEmailId"/>

            </RelativeLayout>



        </ScrollView>


    </LinearLayout>

</layout>
