<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        tools:context=".ui.fragments.ActivateCardsFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/refresh_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_green_light"
                android:gravity="center"
                android:padding="5dp">

                <com.luminous.mpartner.custom_text_view.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresh Count"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/refresh"
                    android:tint="@android:color/white" />

            </LinearLayout>

            <com.luminous.mpartner.custom_text_view.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Blue Coupon Activation Status"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Eligible\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_eligible_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_activated_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Activated\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_activated_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:drawableRight="@drawable/ic_csv_download"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Balance\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_balance_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/black" />


            <com.luminous.mpartner.custom_text_view.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Gold Coupon Activation Status"
                android:textColor="@android:color/black"
                android:textSize="14sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Eligible\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_gold_eligible_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_gold_activated_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Activated\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_gold_activated_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:drawableRight="@drawable/ic_csv_download"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Balance\nCoupons"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_gold_balance_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/black" />

            <com.luminous.mpartner.custom_text_view.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Claim Submission"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/ll_reimbursement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Coupon\nReimbursement"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_coupon_reimbursement"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:drawableRight="@drawable/ic_csv_download"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_open_reimbursement"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical">

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/green_header_login"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Open for\nReimbursement"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <com.luminous.mpartner.custom_text_view.TextViewRegular
                        android:id="@+id/tv_open_reimbursement"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/dashed_border"
                        android:drawableRight="@drawable/ic_csv_download"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="0"
                        android:textColor="@color/green_header_login" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:orientation="horizontal">

                <com.luminous.mpartner.custom_text_view.TextViewRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:text="Click to submit your Final Claim"
                    android:textColor="@color/green_header_login"
                    android:textSize="16sp"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_click"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_green_light"
                    android:text="Click"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@android:color/black" />


            <ImageView
                android:id="@+id/iv_scan_qr"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/qr_image" />

            <me.dm7.barcodescanner.zbar.ZBarScannerView
                android:id="@+id/scannerview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="gone" />

            <com.luminous.mpartner.custom_text_view.TextViewRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Scan QR Code"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>